<?xml version="1.1" ?>
<!-- Theme Author: StarlitGhost
     Libre Franklin Medium is a free font that can be found here:
     https://fonts.google.com/specimen/Libre+Franklin
     It's the closest free font I could find to match with FFVII Remake.
     The actual font that Remake uses is FOT-スキップ Std M https://eng.fontke.com/font/10602156/ -->
<settings>
    <global>
        <NpcName>
            <FontEnglish>Libre Franklin Medium</FontEnglish>
            <FontJapanese>Meiryo</FontJapanese>
            <Size>13</Size>
            <Width>200</Width>
            <Height>2</Height>
            <OffsetX>8</OffsetX>
            <OffsetY>-1</OffsetY>
            <TextOffsetX>2</TextOffsetX>
            <TextOffsetY>-28</TextOffsetY>
            <Color>
                <Alpha>255</Alpha>
                <Blue>255</Blue>
                <Green>255</Green>
                <Red>255</Red>
            </Color>
            <Stroke>
                <Alpha>150</Alpha>
                <Blue>0</Blue>
                <Green>0</Green>
                <Red>0</Red>
                <Width>1.5</Width>
            </Stroke>
        </NpcName>
        <Message>
            <FontEnglish>Libre Franklin Medium</FontEnglish>
            <FontJapanese>Meiryo</FontJapanese>
            <Size>13</Size>
            <MaxLength>81</MaxLength>
            <Width>800</Width>
            <Height>150</Height>
            <TextOffsetX>50</TextOffsetX>
            <TextOffsetY>-18</TextOffsetY>
            <Dialogue>
                <Color>
                    <Alpha>255</Alpha>
                    <Blue>255</Blue>
                    <Green>255</Green>
                    <Red>255</Red>
                </Color>
                <Gear>255,50,255</Gear>
                <Items>100,255,100</Items>
                <KeyItems>100,150,255</KeyItems>
                <RoE>255,140,0</RoE>
                <Stroke>
                    <Alpha>150</Alpha>
                    <Blue>0</Blue>
                    <Green>0</Green>
                    <Red>0</Red>
                    <Width>1.5</Width>
                </Stroke>
            </Dialogue>
            <System>
                <Color>
                    <Alpha>255</Alpha>
                    <Blue>255</Blue>
                    <Green>255</Green>
                    <Red>255</Red>
                </Color>
                <Gear>255,50,255</Gear>
                <Items>100,255,100</Items>
                <KeyItems>100,150,255</KeyItems>
                <RoE>255,140,0</RoE>
            </System>
        </Message>
        <Prompt>
            <Width>36</Width>
            <Height>36</Height>
            <OffsetX>750</OffsetX>
            <OffsetY>0</OffsetY>
        </Prompt>
    </global>
</settings>
